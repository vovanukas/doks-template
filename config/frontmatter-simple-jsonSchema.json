{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Doks Frontmatter",
  "description": "Simple frontmatter editor for Doks pages",
  "required": ["title"],
  "properties": {
    "title": {
      "type": "string",
      "title": "Title",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "title": "Description"
    },
    "summary": {
      "type": "string",
      "title": "Summary"
    },
    "date": {
      "type": "string",
      "title": "Date",
      "format": "date-time"
    },
    "lastmod": {
      "type": "string",
      "title": "Last Modified",
      "format": "date-time"
    },
    "draft": {
      "type": "boolean",
      "title": "Draft",
      "default": false
    },
    "weight": {
      "type": "integer",
      "title": "Weight",
      "default": 999,
      "minimum": 1
    },
    "toc": {
      "type": "boolean",
      "title": "Table of Contents",
      "default": true
    },
    "seo": {
      "type": "object",
      "title": "SEO",
      "properties": {
        "title": {
          "type": "string",
          "title": "SEO Title"
        },
        "description": {
          "type": "string",
          "title": "SEO Description",
          "maxLength": 160
        },
        "canonical": {
          "type": "string",
          "title": "Canonical URL",
          "format": "uri"
        },
        "noindex": {
          "type": "boolean",
          "title": "No Index",
          "default": false
        }
      }
    }
  }
}



